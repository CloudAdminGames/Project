FROM oven/bun:1-alpine

WORKDIR /app

# Copier les fichiers de dépendances
COPY package.json ./

# Installer les dépendances avec Bun
RUN bun install --production

# Copier le code source
COPY src/ ./src/

# Exposer le port
EXPOSE 3000

# Démarrer l'application avec Bun
CMD ["bun", "run", "src/index.js"]
